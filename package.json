{
  "name": "quickjs-emscripten-repo",
  "private": true,
  "version": "0.32.0",
  "sideEffects": false,
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/justjake/quickjs-emscripten"
  },
  "scripts": {
    "prepack": "pnpm run build && pnpm run check:package",
    "tarball": "pnpm run check:packages && rm -rf $PWD/build/tar && mkdir -p $PWD/build/tar && pnpm --filter './packages/*' -r pack --pack-destination $PWD/build/tar",
    "prepare": "pnpm run check",
    "clean": "git clean -dfx ./build && pnpm run for-each-package clean",
    "prettier": "prettier --write . && pnpm run format:c",
    "format:c": "clang-format -i c/*.c c/*.h",
    "vendor:quickjs:subtree": "git subtree $ACTION --prefix=vendor/quickjs --squash git@github.com:bellard/quickjs.git master",
    "vendor:quickjs:pull": "ACTION=pull pnpm run vendor:quickjs:subtree && pnpm run vendor:quickjs:patch",
    "vendor:quickjs:add": "ACTION=add pnpm run vendor:quickjs:subtree",
    "vendor:quickjs:patch": "git apply vendor/quickjs-patches/*",
    "vendor:ng:pull": "./scripts/vendor-quickjs-ng.sh",
    "vendor:update": "pnpm run vendor:quickjs:pull && pnpm run vendor:ng:pull",
    "smoketest-node": "pnpm run tarball && ./scripts/smoketest-node-minimal.ts && ./scripts/smoketest-node.ts",
    "smoketest-cra": "pnpm run tarball && ./scripts/smoketest-create-react-app.ts",
    "smoketest-vite": "pnpm run tarball && ./scripts/smoketest-vite.ts",
    "check": "pnpm run build && pnpm run check:packages && pnpm run check:format && pnpm run check:types && pnpm run test && pnpm run lint",
    "test": "pnpm run for-each-package test",
    "test:fast": "TEST_FAST=true TEST_NO_ASYNC=true pnpm run test",
    "test:slow": "TEST_LEAK=1 pnpm run test",
    "check:types": "pnpm run for-each-package tsc",
    "check:format": "prettier --check .",
    "check:packages": "./scripts/check-packages-built.ts",
    "check:smoketest": "pnpm run tarball && ./scripts/smoketest-node-minimal.ts && ./scripts/smoketest-node.ts && ./scripts/smoketest-create-react-app.ts && ./scripts/smoketest-vite.ts",
    "lint": "npx eslint .",
    "fix": "pnpm run lint --fix ; pnpm run prettier > /dev/null",
    "build": "pnpm run build:codegen && pnpm run build:packages && pnpm run doc",
    "build:codegen": "cp -v README.md packages/quickjs-emscripten && ./scripts/prepareVariants.ts && pnpm --filter @jitl/tsconfig build",
    "ops:c": "./scripts/generate.ts c-ops c/",
    "ops:ts": "./scripts/generate.ts ops packages/quickjs-emscripten-core/src/ops.ts",
    "build:packages": "pnpm run for-each-package build",
    "doc": "typedoc",
    "doc:serve": "cd doc && npx hads",
    "all:publish:stable": "pnpm run check:packages && pnpm run for-each-publishable-package npm publish --access public",
    "all:publish:next": "pnpm run check:packages && pnpm run for-each-publishable-package npm publish --access public --tag next",
    "all:version": "./scripts/set-version.ts",
    "for-each-package-cmd": "pnpm --filter './packages/*' -r",
    "for-each-publishable-package": "pnpm --filter './packages/*' --filter '!./packages/internal-*' -r",
    "for-each-package": "pnpm --filter './packages/*' -r run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@jitl/tsconfig": "workspace:*",
    "@types/emscripten": "^1.38.0",
    "@types/eslint": "^8",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "fs-extra": "^10.0.1",
    "glob": "^10.3.10",
    "hads": "^3.0.3",
    "mdast-util-toc": "^7.1.0",
    "node-fetch-commonjs": "^3.1.1",
    "prettier": "^3.1.1",
    "remark-insert-headings": "^0.0.0",
    "remark-toc": "^9.0.0",
    "source-map-support": "^0.5.21",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typedoc": "^0.28.17",
    "typedoc-plugin-inline-sources": "^1.3.0",
    "typedoc-plugin-markdown": "^4.10.0",
    "typedoc-plugin-remark": "^2.0.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "2.0.5"
  },
  "packageManager": "pnpm@10.29.3"
}
